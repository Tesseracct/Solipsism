{
  "manifest_version": 2,
  "name": "Letterboxd Solipsism",
  "version": "0.0.4",

  "description": "Hides ratings on Letterboxd film pages.",

  "content_scripts": [
    {
      "matches": ["*://letterboxd.com/film/*"],
      "js": ["solipsism.js"]
    }
  ],

  "permissions": [
    "storage"
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Letterboxd Solipsism",
    "default_popup": "popup.html",
    "browser_style": true
  }
}